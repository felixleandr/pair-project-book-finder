<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('nav.ejs') %>
    <h1>List Books</h1>
    <button>
        <a type="button" href="/books/add">Add Book</a>
    </button>
    <form action="/books" method="get">
        <div>
            <input type="text" name="search" id="">
            <button type="submit">Search</button>
        </div>
    </form>

    <form action="/books" method="get">
        <div>
            <% let all = {name: 'All'} %>
            <% publishers.unshift(all)%>
            <% publishers.forEach(el => { %>
                <button name="PublisherId" value="<%= el.id%>" type="submit"><%= el.name %></button>

            <% }) %>
        </div>
    </form>
    <div class="card-group row">
        <% result.forEach(el => { %>
            <div class="col-lg-3" style="margin: 10px 20px; ">
            <div class="card">
                <img src="<%=el.imageUrl%>" class="card-img-top" alt="..." style="">
                <div class="card-body" >
                  <h5 class="card-title"><%=el.title%></h5>
                  <p><%= el.caption %></p>
                  <p>Published By <%=el.Publisher.name%></p>
                  <p class="card-text"><%=el.descriptions%></p>
                  <div style="display: flex; gap: 10px;">
                    <a href="<%= el.link%>" type="button">Buy</a>
                    <a href="/books/<%= el.id%>/edit" type="button">Edit</a>
                  </div>
                  <div style="display: flex; gap: 10px;">
                      <a href="" type="button">Add to Favorites</a>
                      <a href="/books/<%=el.id%>/delete" type="button">Delete</a>
                  </div>
                  <p style="color: rgb(174, 173, 173);">Uploaded on <%= el.createdAt = timestamp(el.createdAt)%></p>
                </div>
            </div>
        </div> 
        <% }) %>
      </div>
</body>
</html>