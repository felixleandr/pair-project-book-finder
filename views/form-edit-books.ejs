<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Add Book</title>
    <style>
        input{
            width: 300px;
        }
    </style>
</head>
<body>
    <%- include('nav.ejs') %>
    <h1>Edit Book</h1>
    <% if (errors) { %>
        <% errors.split(';').forEach(el => { %>
            <p style="color: red;"><%= el %></p>
        <% }) %>
    <% } %>
    <div style="max-width: 1240px; width: 100px;">
        <form action="/<%=userId%>/books/<%=result.id%>/edit" method="post">
            <label for="">Title</label><br>
            <input type="text" name="title" id="" value="<%=result.title%>"><br>
    
            <label for="">Author</label><br>
            <input type="text" name="author" id="" value="<%=result.author%>"><br>
    
            <label for="">ISBN</label><br>
            <input type="text" name="isbn" id="" value="<%=result.isbn%>"><br>
    
            <label for="">Image URL</label><br>
            <input type="url" name="imageUrl" id="" value="<%=result.imageUrl%>"><br>
    
            <label for="">Descriptions</label><br>
            <input style="height: 100px;" type="textarea" name="descriptions" id="" value="<%=result.descriptions%>"><br>
    
            <label for="">Link</label><br>
            <input type="url" name="link" id="" value="<%=result.link%>"><br>
    
            <label for="">Publisher</label><br>
            <select name="PublisherId" id="">
                <option value="" disabled selected>----Select----</option>
                <% publishers.forEach(el => { %>
                    <% if (el.name === result.Publisher.name) { %>
                        <option selected value="<%=el.id%>"><%=el.name%></option>
                    <% } else {%>
                        <option value="<%=el.id%>"><%=el.name%></option>
                    <% } %>
                <% }) %>
            </select><br>
            
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>